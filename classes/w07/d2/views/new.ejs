  <body>
    <h1>New Fruit Page</h1>
    <form action="/fruits/" method="post">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" value="Simon"/>
      <label for="color">Color</label>
      <input type="text" name="color" id="color" />
